# Server Configuration
PORT=8080
HOST=127.0.0.1
NODE_ENV=development

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/server.crt
SSL_KEY_PATH=/path/to/server.key

# Database Configuration - Primary
DATABASE_URL=postgresql://user:password@localhost:5432/myapp
DB_PASSWORD=your_password_here
DB_MAX_CONNECTIONS=200
DB_SSL=true

# Database Configuration - Replica
DATABASE_REPLICA_URL=postgresql://user:password@replica.localhost:5432/myapp
DB_REPLICA_MAX_CONNECTIONS=100
DB_REPLICA_READ_ONLY=true

# Authentication - JWT
JWT_SECRET=your_jwt_secret_at_least_32_chars_long
JWT_EXPIRES_IN_HOURS=48
JWT_ALGORITHM=HS256

# Authentication - OAuth
OAUTH_PROVIDERS=google,github,microsoft
OAUTH_REDIRECT_URL=https://your-app.com/auth/callback

# Authentication - API Keys
API_KEYS=your_api_key_1,your_api_key_2

# Logging Configuration
LOGGING_ENABLED=true
LOG_LEVEL=debug
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_TO_REMOTE=false

# External APIs - Payment
PAYMENT_API_URL=https://api.stripe.com/v1
PAYMENT_API_KEY=your_stripe_key
PAYMENT_API_TIMEOUT_MS=10000

# External APIs - Notification
NOTIFICATION_API_URL=https://api.sendgrid.com/v3
NOTIFICATION_API_KEY=your_sendgrid_key

# Monitoring
MONITORING_ENABLED=true
MONITORING_ENDPOINT=https://api.datadog.com/api/v1

# Docker Compose Project Configuration
COMPOSE_PROJECT_NAME=onebun-example

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_URL=redis://:your_redis_password@localhost:6379/0

# Additional Redis Settings
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY_MS=1000
REDIS_CONNECTION_TIMEOUT_MS=5000
